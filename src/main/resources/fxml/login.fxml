<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="720.0" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.LoginView">
    <children>
        <StackPane prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <effect>
                <DropShadow/>
            </effect>
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox style="-fx-background-color: #fe4451;" HBox.hgrow="ALWAYS"/>
                        <VBox style="-fx-background-color: white;" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <StackPane.margin>
                        <Insets bottom="45.0" left="45.0" right="45.0" top="45.0"/>
                    </StackPane.margin>
                    <children>
                        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="350.0"
                              prefWidth="350.0" style="-fx-background-color: white;">
                            <effect>
                                <DropShadow/>
                            </effect>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                      style="-fx-font-size: 2em; -fx-font-family: Quicksand; -fx-font-weight: bold; -fx-fill: #ff3b49;"
                                      text="Login"/>
                                <HBox alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="250.0"
                                      style="-fx-background-color: white; -fx-border-color: #a2a2a2; -fx-border-width: 0px 0px 2px 0px;">
                                    <VBox.margin>
                                        <Insets top="30.0"/>
                                    </VBox.margin>
                                    <children>
                                        <TextField prefHeight="31.0" prefWidth="244.0" promptText="username"
                                                   style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS"
                                                   fx:id="userNameField"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_RIGHT" layoutX="60.0" layoutY="130.0" maxWidth="-Infinity"
                                      prefWidth="250.0"
                                      style="-fx-background-color: white; -fx-border-color: #a2a2a2; -fx-border-width: 0px 0px 2px 0px;">
                                    <children>
                                        <PasswordField promptText="password" style="-fx-background-color: transparent;"
                                                       HBox.hgrow="ALWAYS" fx:id="passWordField">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </PasswordField>
                                    </children>
                                    <VBox.margin>
                                        <Insets top="30.0"/>
                                    </VBox.margin>
                                </HBox>
                                <Button mnemonicParsing="false" prefWidth="180.0"
                                        style="-fx-background-color: #ff3b49; -fx-background-radius: 100px; -fx-text-fill: white;"
                                        text="Login" fx:id="loginButton" onMouseClicked="#loginClicked">
                                    <VBox.margin>
                                        <Insets top="30.0"/>
                                    </VBox.margin>
                                </Button>
                                <HBox alignment="BOTTOM_CENTER" prefHeight="92.0" prefWidth="330.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Pane prefHeight="92.0" prefWidth="332.0">
                                            <children>
                                                <Text layoutX="60.0" layoutY="79.0" strokeType="OUTSIDE"
                                                      strokeWidth="0.0"
                                                      style="-fx-font-weight: bold; -fx-font-family: Quicksand;"
                                                      text="Need an account?"/>
                                                <Text layoutX="195.0" layoutY="79.0" strokeType="OUTSIDE"
                                                      strokeWidth="0.0"
                                                      style="-fx-font-weight: bold; -fx-font-family: Quicksand; -fx-fill: #ff3b49;"
                                                      text="SignUp" fx:id="signUpLabel"
                                                      onMouseClicked="#signUpClicked"/>
                                                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="1.0"
                                                       layoutY="14.0" prefHeight="21.0" prefWidth="330.0"
                                                       style="-fx-text-fill: black; -fx-font-size: 15;"
                                                       fx:id="errorLabel"/>
                                            </children>
                                        </Pane>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
