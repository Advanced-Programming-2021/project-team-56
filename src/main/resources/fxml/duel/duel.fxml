<AnchorPane prefHeight="1050.0" prefWidth="1680.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.duel.DuelView">

    <stylesheets>
        <URL value="@../../CSS/mainDuel.css"/>
    </stylesheets>
    <children>
        <HBox prefHeight="80.0" style="-fx-background-color: #242551;" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
