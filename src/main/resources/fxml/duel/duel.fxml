                            <children>
                                <StackPane prefHeight="250.0">
                                    <children>
                                        <Circle fill="#500274" radius="110.0" stroke="BLACK" strokeType="INSIDE"/>
                                        <Circle fx:id="myMagicCircle" fill="DODGERBLUE" radius="110.0" stroke="BLACK"
                                                strokeType="INSIDE"/>
                                        <Circle fx:id="myAvatarCircle" fill="DODGERBLUE" radius="70.0" stroke="BLACK"
                                                strokeType="INSIDE"/>
                                    </children>
                                </StackPane>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefHeight="50.0" text="Username:" textFill="#8800d4">
