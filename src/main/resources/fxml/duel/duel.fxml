                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefHeight="50.0" text="Nickname:" textFill="#8800d4">
                                            <font>
                                                <Font name="Times New Roman" size="20.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="opponentNicknameLabel" prefHeight="50.0" textFill="WHITE">
                                            <font>
                                                <Font name="Times New Roman" size="15.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0"/>
                            </padding>
                        </VBox>
                        <TextFlow fx:id="textFlow" prefHeight="170.0"
                                  style="-fx-border-color: #500274; -fx-border-width: 5 0 5 0;"/>
