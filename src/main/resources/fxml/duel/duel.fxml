              AnchorPane.topAnchor="80.0">
            <children>
                <VBox prefHeight="970.0" prefWidth="510.0"
                      style="-fx-background-color: #0E061E; -fx-border-color: #500274; -fx-border-width: 5; -fx-border-radius: 2;">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="135.0">
                            <children>
                                <Label fx:id="opponentLPLabel" alignment="CENTER_RIGHT" prefHeight="70.0"
                                       prefWidth="460.0" text=" LP : 8000" textFill="WHITE">
                                    <font>
                                        <Font name="Times New Roman" size="35.0"/>
                                    </font>
                                </Label>
                                <HBox alignment="CENTER" prefHeight="60.0"
                                      style="-fx-background-color: transparent; -fx-background-radius: 20; -fx-border-color: #DBBEF6; -fx-border-width: 5; -fx-border-radius: 20;">
                                    <children>
                                        <Pane fx:id="opponentLPBar" prefHeight="60.0" prefWidth="460.0"
                                              style="-fx-background-color: #8800d4; -fx-background-radius: 18;"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="20.0" right="20.0"/>
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="700.0">
                            <children>
                                <ImageView fx:id="clickedCardImageView" fitHeight="680.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/Duel/Back-card.jpg"/>
                                    </image>
                                </ImageView>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="135.0">
                            <children>
                                <Label fx:id="myLPLabel" alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="460.0"
                                       text=" LP : 8000" textFill="WHITE">
                                    <font>
                                        <Font name="Times New Roman" size="35.0"/>
                                    </font>
                                </Label>
                                <HBox alignment="CENTER" prefHeight="60.0"
                                      style="-fx-background-color: transparent; -fx-background-radius: 20; -fx-border-color: #DBBEF6; -fx-border-width: 5; -fx-border-radius: 20;">
                                    <children>
                                        <Pane fx:id="myLPBar" prefHeight="60.0" prefWidth="460.0"
                                              style="-fx-background-color: #8800d4; -fx-background-radius: 18;"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="20.0" right="20.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
                <AnchorPane fx:id="fieldAnchorPane" prefHeight="970.0" prefWidth="921.5"/>
